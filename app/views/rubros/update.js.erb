<% if @rubro.errors.empty? %>
$(".row-<%=@rubro.id%>").html("<%= escape_javascript render(:partial => 'rubros/update', :locals => { :rubro => @rubro }) %>");

	toastr.success('Articulos modificados');
	$('#edit-rubro-modal').modal('hide');

	<% else %>
	  toastr.error("<%= @rubro.errors.full_messages.join(", ") %>", 'Hubo un error');
	<% end %>

$('#edit-rubro-modal').on('hidden.bs.modal', function(){ 
	$('#edit-rubro-modal').remove();
});