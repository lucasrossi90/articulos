var modalFecha = $('<%= j render "edit_fecha_rubro", title: "Editar la fecha del precio de todos los articulos de un rubro" %>').modal();

$(modalFecha).on('hidden.bs.modal', function(){ 
	$(modalFecha).remove();
});

$(modalFecha).on('shown.bs.modal', function () {
$("#hoy").click(function() {
	debugger
	var today = new Date();
	var dd = today.getDate();
	var mm = today.getMonth() + 1; //January is 0!
	var yyyy = today.getFullYear();

	if (dd < 10) {
	  dd = '0' + dd;
	}

	if (mm < 10) {
	  mm = '0' + mm;
	}

	today = dd + '-' + mm + '-' + yyyy;

	$("#fecha_update").val(today)
})
})


