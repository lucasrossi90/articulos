<% if @articulo.errors.empty? %>
$(".row-<%=@articulo.interno%>").html("<%= escape_javascript render(:partial => 'articulos/update', :locals => { :articulo => @articulo }) %>");

toastr.success('Articulo modificado');
$('#edit-modal').modal('hide');


<% else %>
  toastr.error("<%= @articulo.errors.full_messages.join(", ") %>", 'Hubo un error');
<% end %>


$('#edit-modal').on('hidden.bs.modal', function(){ 
	$('#edit-modal').remove();
});