	<h1 class="display-6">Modificar articulo</h1>

	<div class="row">
	  <div class="col-md-8 offset-md-1">
	    <%= form_for(@articulo) do |a| %>

      	<div class="form-control-inline ">
	      	<%= a.label :Interno %>
	  		<%= a.text_field :interno, :disabled => true, :class => "col-md-2"  %>
  		</div>
  		<div class="form-control-inline">
			<%= a.label :Codigo%>
  			<%= a.text_field :codigo, :class => "col-md-3" %>
  		</div>
  		<div class="form-control-inline">
			<%= a.label :DescripciÃ³n%>
  			<%= a.text_field :descripcion, :class => "col-md-6" %>
  		</div>	
  		<div class="form-control-inline">
			<%= a.label :Rubro%>
  			<%= select_tag :rubro, options_from_collection_for_select(@rubros, :id, :nombre, 
  			 selected = @articulo.rubro_id), class: 'col-md-6' %>
		</div>
		<div class="form-control-inline text_costo">
			<%= a.label :Costo%>
  			<%= a.text_field :costo, :class => "col-md-3" %>
		</div>
		<div class="form-control-inline text_ganancia">
			<%= a.label :Ganancia%>
  			<%= a.text_field :ganancia, :class => "col-md-3" %>
		</div>
		<div class="form-control-inline text_precio">
			<%= a.label :'Precio IVA incl.'%>
  			<%= a.text_field :precio, :class => "col-md-3" %>
		</div>
		<div class="form-control-inline">
			<%= a.label :'Fecha precio'%>
  			<%= a.text_field :fecha_precio, :class => "col-md-3" %>
		</div>
		<div class="form-control-inline">
			<%= a.label :Proveedor%>
  			<%= select_tag :proveedor, options_from_collection_for_select(@proveedores, :id, :nombre, selected = @articulo.proveedor_id), class: 'col-md-6' %>
		</div>
		<div class="form-control-inline">
			<%= a.label :'Descuento proveedor'%>
  			<%= a.text_field :'descuento', :class => "col-md-3", :disabled => true %>
		</div>
	    <%= a.submit "Guardar cambios", class: "btn btn-sm btn-primary"%>
		<% end %>
 	</div>
 </div>

  <script type="text/javascript">

    $(".text_costo").keyup(function() {
		$("#articulo_precio").val($("#articulo_costo").val() * $("#articulo_ganancia").val() * 1.21)
		})

    $(".text_ganancia").keyup(function() {
    	$("#articulo_precio").val($("#articulo_costo").val() * $("#articulo_ganancia").val() * 1.21)
		})
  </script>