<div class="form-group mb-0 mt-10 row inputRow">
      <div class="form-group col-md-2">
        <input class="form-control search_articulos" type="text" placeholder="buscar x INTERNO" id="interno" autocomplete="off">
      </div>
      <div class="form-group col-md-2">
       <input class="form-control search_articulos" type="text" placeholder="buscar x CÓDIGO" id="codigo" autocomplete="off">
      </div>
      <div class="form-group col-md-3">
       <input class="form-control search_articulos" type="text" placeholder="buscar x DESCRIPCIÓN" id="descripcion" autocomplete="off">
      </div>
     <div class="col-md-2">
             <%= select_tag :rubro, options_from_collection_for_select(@rubros, :id, :nombre), include_blank: 'Filtrar por RUBROS', class: 'form-control search_rubro' %>
     </div>
      <div class="form-group col-md-1">
      <%= button_to "Nueva búsqueda", '/articulos', :method => :get, :class => "btn btn-nuevo btn-sm btn-success" %>
     </div>
     <div class="form-group col-md-1">
      <%= button_to "Nuevo articulo", '/articulos/new', :method => :get, :class => "btn btn-newarticulo btn-sm btn-success" %>
     </div>
</div>
<div class="form-group mt-0 mb-0 row checkRow">
      <div class="form-group col-sm-3">
      </div>
      <div class="form-group col-sm-2">
        <%= check_box_tag 'checkCodigo', value = "1", checked = false, class: 'form-check-input checkCodigo' %>
        <label>si INCLUYE Código...</label>
      </div>
      <div class="form-group col-sm-3">
        <%= check_box_tag 'checkDescripcion', value = "1", checked = false, class: 'form-check-input checkDescripcion'%>
         <label>si INCLUYE Descripción...</label>
      </div> 
</div>

