var modalEdit = $('<%= j render "edit", title: "Editar articulo" %>').modal();

$(modalEdit).on('hidden.bs.modal', function(){ 
	$(modalEdit).remove();
});

$(modalEdit).on('shown.bs.modal', function () {
 $("#articulo_costo").keyup(function() {
	  $("#articulo_precio").val(
	  	((
	  	parseInt($("#articulo_costo").val()) + 
    	parseInt(($("#articulo_ganancia").val()/100) * $("#articulo_costo").val()
    	)) * 1.21).toFixed(2)
	  	)
	})

  $("#articulo_ganancia").keyup(function() {
   	  $("#articulo_precio").val(	((
	  	$("#articulo_costo").val() + 
    	(($("#articulo_ganancia").val()/100) * $("#articulo_costo").val()))
    	 * 1.21).toFixed(2)
	  	)
	})

  $(".button-hoy").click(function() {
	var today = new Date();
	var dd = today.getDate();
	var mm = today.getMonth() + 1; //January is 0!
	var yyyy = today.getFullYear();

	if (dd < 10) {
	  dd = '0' + dd;
	}

	if (mm < 10) {
	  mm = '0' + mm;
	}

	today = dd + '-' + mm + '-' + yyyy;

	$("#articulo_fecha_precio").val(today)
})

});
