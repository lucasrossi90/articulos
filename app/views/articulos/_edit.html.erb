       <div id="edit-modal" class="modal fade">
  		<div class="modal-dialog modal-lg">
    	 <div class="modal-content">
    	  <div class="modal-header">
       		<h5 class="modal-title">Modificar articulo</h5>
        		<button type="button" class="close" data-dismiss="modal" aria-label="close">
          		<span aria-hidden="true">&times;</span>
        	</button>
	      </div>
			<div>
			    <%= form_for @articulo, remote: true do |a| %>
			    <div class="modal-body">

			      	<div class="form-control-inline ">
				      	<%= a.label :Interno, :class => "col-sm-2" %>
				  		<%= a.text_field :interno, :disabled => true, :class => "col-md-2"  %>
			  		</div>

			  		<div class="form-control-inline">
						<%= a.label :Codigo, :class => "col-sm-2" %>
			  			<%= a.text_field :codigo, :class => "col-md-3" %>
			  		</div>
			  		<div class="form-control-inline">
						<%= a.label :DescripciÃ³n, :class => "col-sm-2" %>
			  			<%= a.text_field :descripcion, :class => "col-md-6" %>
			  		</div>	
			  		<div class="form-control-inline">
						<%= a.label :Rubro, :class => "col-sm-2" %>
			  			<%= a.select :rubro_id, options_from_collection_for_select(@rubros, :id, :nombre, 
			  			 selected = a.object.rubro_id), class: 'col-md-6' %>
					</div>
					<div class="form-control-inline">
						<%= a.label :Costo, :class => "col-sm-2" %>
			  			<%= a.number_field :costo, :step => 0.01, :class => "col-md-3 " %>
					</div>
					<div class="form-control-inline">
						<%= a.label :Ganancia, :class => "col-sm-2" %>
			  			<%= a.number_field :ganancia, :step => 0.01, :class => "col-md-3" %>
					</div>
					<div class="form-control-inline">
						<%= a.label :'precio', "Precio IVA incl.", :class => "col-sm-2" %>
			  			<%= a.number_field :precio, :step => 0.01, :class => "col-md-4 " %>
					</div>
					<div class="form-control-inline">
						<%= a.label :'Fecha precio', :class => "col-sm-2" %>
			  			<%= a.text_field :fecha_precio, :class => "col-md-3", value: diaMesAnio(@articulo.fecha_precio) %>
			  			<%= button_tag :Hoy, :type => "button", :class => "col-md-1 btn button-hoy btn-sm btn-success"%>
					</div>
					<div class="form-control-inline">
						<%= a.label :Proveedor, :class => "col-sm-2" %>
			  			<%= a.select :proveedor_id, options_from_collection_for_select(@proveedores, :id, :nombre, selected = a.object.proveedor_id), class: 'col-md-6' %>
					</div>
					<div class="form-control-inline">
						<%= a.label :Ubicacion, :class => "col-sm-2" %>
			  			<%= a.text_field :ubicacion, class: 'col-md-2' %>
					</div>
					<div class="form-control-inline">
						<%= a.label :Comentarios, :class => "col-sm-2" %>
			  			<%= a.text_area :comentarios, class: 'col-md-6' %>
					</div>
				</div>

				<div class="modal-footer">
				    	<%= a.submit "Guardar cambios", class: "btn btn-edit"%>
				    	<button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
				</div>
				
				<% end %>
			 </div>

		 	</div>
		 </div>
     </div>



